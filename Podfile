workspace 'DGGridCollectionViewController.xcworkspace'

## Framework targets
abstract_target "Frameworks" do
	use_frameworks!

	target 'DGGridCollectionViewController-iOS' do
		platform :ios, '8.0'
	end

	target 'DGGridCollectionViewController-tvOS' do
		platform :tvos, '9.0'
	end
end

## Tests targets
abstract_target "Tests" do
	use_frameworks!

	target 'DGGridCollectionViewControllerTests-iOS' do
		platform :ios, '8.0'
	end

	target 'DGGridCollectionViewControllerTests-tvOS' do
		platform :tvos, '9.0'
	end
end

## Samples targets
abstract_target "Samples" do
	use_frameworks!

	target 'DGGridCollectionViewControllerSample-iOS' do
		project 'Samples/DGGridCollectionViewControllerSample-iOS/DGGridCollectionViewControllerSample-iOS'
		platform :ios, '8.0'
	end

	target 'DGGridCollectionViewControllerSample-tvOS' do
		project 'Samples/DGGridCollectionViewControllerSample-tvOS/DGGridCollectionViewControllerSample-tvOS'
		platform :tvos, '9.0'
	end
end
